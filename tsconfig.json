{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@auth/*": ["src/modules/auth/*"],
      "@config/*": ["src/config/*"],
      "@jobs/*": ["src/modules/jobs/*"],
      "@users/*": ["src/modules/users/*"],
      "@categories/*": ["src/modules/categories/*"],
      "@providers/*": ["src/modules/providers/*"],
      "@payment-method/*": ["src/modules/payment-method/*"],
      "@account/*": ["src/modules/account/*"],
      "@transactions/*": ["src/modules/transactions/*"],
      "@shared/*": ["src/shared/*"],
    }
  }
}
